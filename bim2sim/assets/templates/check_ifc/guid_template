% for ifc_type in all_errors:
<table class="tg">
    <thead>
        <tr id="IFCProduct">
            <th class="tg-1wig">GUID</th>
            <th class="tg-1wig">IFCType</th>
            <th class="tg-1wig">Error(s)</th>
            <th class="tg-1wig">Error description</th>
            <th class="tg-1wig">No. Errors</th>
        </tr>
    </thead>
    <tbody>
        <tr id="${ifc_type}">
        % for guid, errors in all_errors[ifc_type].items():
            <td  rowspan="${len(errors)}">${guid}</td>
            <td  rowspan="${len(errors)}">${ifc_type}</td>
            <% row = 0 %>
            % for error in errors:
                <% error_com = error.split(' - ') %>
                % if row != 0:
                <tr>
                % endif
                % for err_string in error_com:
                    <td>${err_string}</td>
                % endfor
                % if row == 0:
                    <td rowspan="${len(errors)}" class="tg-c3ow">
                    ${len(errors)}</td>
                % endif
                </tr>
                <% row += 1 %>
            % endfor
            <tr>
        %endfor
    </tbody>
</table><br>
%endfor
