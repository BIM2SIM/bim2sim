        timeEnd		25000;

        executeControl		timeStep;

        executeInterval		1;

        writeControl		timeStep;

        writeInterval		1;

    }

    wallHeatFlux
    {

        type		wallHeatFlux;

        libs		( "libfieldFunctionObjects.dll" );

        qr		qr;

        enabled		true;

        useUserTime		false;

