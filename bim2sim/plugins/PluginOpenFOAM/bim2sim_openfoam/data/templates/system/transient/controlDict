purgeWrite		0;

writeFormat		ascii;

writePrecision		9;

writeCompression		on;

timeFormat		general;

timePrecision		6;

runTimeModifiable		true;

adjustTimeStep  yes;

maxCo           0.5;

functions
{

    MinMax
    {

        type		fieldMinMax;

        libs		( "libfieldFunctionObjects.dll" );

