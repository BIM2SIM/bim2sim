{
	version		4.0;
	format		ascii;
	class		dictionary;
	location	"system";
	object		fvSolution;
}

solvers
{

    p
    {

        solver		GAMG;

        tolerance		1e-7;

        relTol		0.1;

        smoother		GaussSeidel;

        nPreSweepsre		0;

        nPostSweeps		2;

        cacheAgglomeration		on;

        agglomerator		faceAreaPair;

        nCellsInCoarsestLevel		10;

        mergeLevels		1;

    }
    U
    {

        solver		PBiCGStab;

        smoother		GaussSeidel;

        tolerance		1E-08;

        relTol		0.1;

        nSweeps		1;

        preconditioner		DILU;

    }

    k
    {

        solver		PBiCGStab;

        smoother		GaussSeidel;

        tolerance		1E-08;

        relTol		0.1;

        nSweeps		1;

        preconditioner		DILU;

    }

    epsilon
    {

        solver		smoothSolver;

        smoother		GaussSeidel;

        tolerance		1e-8;

        relTol		0.1;

        nSweeps		1;

    }

    h
    {

        relTol		0.1;

        tolerance		1E-08;

        preconditioner		DILU;

        solver		PBiCGStab;

    }

    omega
    {

        relTol		0.1;

        tolerance		1E-08;

        preconditioner		DILU;

        solver		PBiCGStab;

    }
    G
    {

        solver		GAMG;

        tolerance		1e-6;

        relTol		0.1;

        smoother		DIC;

        cacheAgglomeration		true;

        nCellsInCoarsestLevel		10;

        agglomerator		faceAreaPair;

        mergeLevels		1;

    }

    Ii
    {

        solver		GAMG;

        tolerance		1e-4;

        relTol		0;

        smoother		symGaussSeidel;

        cacheAgglomeration		false;

        nCellsInCoarsestLevel		100;

        agglomerator		faceAreaPair;

        mergeLevels		1;

