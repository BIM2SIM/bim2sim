        nPostSweeps		1;

    }

    p_rgh
    {

        mergeLevels		1;

        agglomerator		faceAreaPair;

        nCellsInCoarsestLevel		10;

        cacheAgglomeration		true;

        smoother		DIC;

        relTol		0.01;

        tolerance		1e-8;

        solver		GAMG;

        preconditioner		DIC;

    }
        AoA
    {

        solver		GAMG;

        tolerance		1e-6;

        relTol		0.1;

        nPreSweeps		0;

        nPostSweeps		2;

        cacheAgglomeration		true;

        smoother		GaussSeidel;

        agglomerator		faceAreaPair;

        nCellsInCoarsestLevel		10;

        mergeLevels		1;

        maxIter		100;

    }

    "rho.*"
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       0;
        relTol          0;
    }


    UFinal
    {
        $U;
        relTol          0.1;
    }

    "kFinal"
    {
