FoamFile
{
	version		4.0;
	format		ascii;
	class		dictionary;
	location	"constant";
	object		radiationProperties;
}

fvDOMCoeffs
{

    nPhi		3;

    nTheta		5;

    tolerance		1e-3;

    maxIter		5;

    useSolarLoad		false;

    useExternalBeam		false;

}

radiationModel		P1;

solverFreq		1;

constantAbsorptionEmissionCoeffs
{

    absorptivity		absorptivity [m^-1] 0.001;

    emissivity		emissivity [m^-1] 0.001;

    E		E [kg m^-1 s^-3] 0;

}

absorptionEmissionModel		constantAbsorptionEmission;

sootModel		none;

scatterModel		none;

transmissivityModel		none;